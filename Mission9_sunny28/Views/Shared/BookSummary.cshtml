@{
}
@model Book 

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @*Include all fields but the bookid*@
            @Model.Title
            <span class="badge badge-pill badge-primary" style="float:right; color:black;">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
        <div class="card-text p-1">
            @Model.Author
        <span class="badge badge-pill badge-primary" style="float:right; color:black;">
            <small>@Model.Publisher</small>
        </span>
        </div>
    </div>
    <div class="card-text p-1">
        @Model.Category  @Model.Classification (@Model.PageCount page read)
        <span class="badge badge-pill badge-primary" style="float:right; color:black;">
            <small>ISBN @Model.Isbn.ToString()</small>
        </span>
    </div>

    <form method="post" asp-page="/Buy">
        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathandQuery()" />

        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Buy</button>
        </span>
    </form>
</div>
